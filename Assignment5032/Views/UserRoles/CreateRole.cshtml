
@{
    ViewBag.Title = "CreateRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create a Role</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    // user input & a button for submit
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-3">Role Name</label>
            <div class="col-md-8">
                @Html.Editor("RoleName", new { htmlAttributes = new { @class="form-control", required=true} })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-8">
                <input type="submit" value="CreateRole" class="btn btn-default" />
            </div>
        </div>
    </div>
}
